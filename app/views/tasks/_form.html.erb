<% if @task.errors.any? %>
<ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for :task, url: tasks_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :priority %><br>
    <%= f.number_field(:priority, in: 1..20, step: 1) %>
  </p>

  <p>
    <%= f.label :progress %><br>
    <%= f.number_field(:progress, in: 1..100, step: 1) %>
  </p>

  <p>
    <%= f.label :deadline %><br>
    <%= f.date_field(:deadline) %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>