<script type="text/javascript">
$(document).ready(function() {
  $('#task_priority').change(function() {
    console.log($('#priorityAmount').val());
    console.log($('#task_priority').val());
    $('#priorityAmount').val($('#task_priority').val());
  });
  $('#task_progress').change(function() {
    console.log($('#task_progress').val());
  });

});  
</script>

<% if @task.errors.any? %>
<ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= @task.new_record? %>

<%= form_for :task, url: (@task.new_record? ? tasks_path : task_path(@task)), method: (@task.new_record? ? :post : :put) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :priority %><br>
    <%= f.range_field(:priority, in: 1..20, step: 1, value: 1) %>
    <output name="priorityAmount" id="priorityAmount" for="task[priority]">1</output>
  </p>

  <p>
    <%= f.label :progress %><br>
    <%= f.range_field(:progress, in: 1..100, step: 1, value: 1) %>
    <%= f.number_field(:progress, in: 1..100, step: 1, value: 1) %> %
  </p>

  <p>
    <%= f.label :deadline %><br>
    <%= f.date_field(:deadline) %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>