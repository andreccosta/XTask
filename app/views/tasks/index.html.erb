<h4>Tasks</h4>

<table>
	<thead>
		<tr>
			<th>#</th>
			<th>Priority</th>
			<th>Name</th>
			<th>Description</th>
			<th>Owner</th>
			<th>Deadline</th>
		</tr>
	</thead>
	<tbody>

<% @tasks.each do |task| %>
	<tr onclick="document.location ='<%= task_path(task) %>'">
		<td class="center"><%= task.id %></td>
		<td class="center"><%= task.priority %></td>
		<td>
			<%= task.name %>
		</td>
		<td>
			<%= task.body %>
		</td>
		<td>
			<% if task.user %>
				<%= task.user.email %>
			<% else %>
				Anonymous
			<% end %>
		</td>
		<td>
			<% if task.deadline %>
				<%= task.deadline.strftime("%d/%m/%Y") %>
			<% end %>
		</td>
	</tr>
<% end %>
	</tbody>
</table>

<br />

<% if current_user.present? %>
	<%= link_to 'New task', new_task_path %>
<% end %>