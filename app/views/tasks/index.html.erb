<h4>Tasks</h4>

<table>
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Description</th>
			<th>Owner</th>
			<th>Deadline</th>
			<th>Priority</th>
			<th>Progress</th>
		</tr>
	</thead>
	<tbody>

<% @tasks.each do |task| %>
	<tr onclick="document.location ='<%= task_path(task) %>'">
		<td class="center"><%= task.id %></td>

		<td>
			<%= task.name %>
		</td>
		<td>
			<%= task.body %>
		</td>
		<td>
			<% if task.user %>
				<a href='<%= user_path(task.user) %>'><%= task.user.email %></a>
			<% else %>
				Anonymous
			<% end %>
		</td>
		<td>
			<% if task.deadline %>
				<%= task.deadline.strftime("%d/%m/%Y") %>
			<% end %>
		</td>
		<td id="priority" class="center">
			<%= task.priority %>
		</td>
		<td id="progress" class="center">
			<div class="progress">
				<div class="bar"><span><%= (task.progress.present?)? task.progress : 0 %></span></div>
			</div>
		</td>
	</tr>
<% end %>
	</tbody>
</table>

<br />

<% if current_user.present? %>
	<%= link_to 'New task', new_task_path %>
<% end %>