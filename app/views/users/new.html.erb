<h1>Register</h1>

<%= form_for @user do |f| %>
	<div>
		<%= f.label :email %>
		<br>
		<%= f.text_field :email %>
		<br>
		<%= f.label :password %>
		<br>
		<%= f.password_field :password %>
		<br>
		<%= f.label :password_confirmation %>
		<br>
		<%= f.password_field :password_confirmation %>

		<br>

		<%= f.submit %>
	</div>
<% end %>
