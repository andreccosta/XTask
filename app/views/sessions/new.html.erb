<div class="input-login">
	<%= form_tag sessions_path do %>
	<fieldset>
		<div class="input-group">
		<%= label_tag 'email', 'Email' %>
		<%= text_field_tag 'email' %>
		</div>

		<div class="input-group">
		<%= label_tag 'password', 'Password' %>
		<%= password_field_tag 'password' %>
		</div>

		<div class="input-controls">
		<%= submit_tag 'Login' %>
		</div>
	</fieldset>
	<% end %>
</div>
